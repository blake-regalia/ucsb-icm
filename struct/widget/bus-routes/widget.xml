<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE widget>

<widget name="bus-routes">
	
	<action>
		<define id="main" />
		<define id="route" />
	</action>
	
	<menu link="widget.action.main">
		<title>bus routes</title>
		<icon
			idle="draw/idle.gif"
			hover="draw/hover.gif"
			active="draw/active.gif"
		/>
	</menu>
	
	<search>
		<item link="widget.action.main">Bus Routes</item>
		
		<dataset>
			<item link="widget.action.view-line" key="$line">$title</item>
		</dataset>
		
